<Window x:Class="PDF_Editor.Windows.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:local="clr-namespace:PDF_Editor.Windows"
        mc:Ignorable="d"
         Title="Message"
   SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterOwner"
    ShowInTaskbar="False"
    Topmost="True"
    AllowsTransparency="False"
    WindowStyle="None"
    ResizeMode="NoResize"
    Background="{DynamicResource ApplicationBackgroundBrush}"
        MinWidth="300"
        MaxWidth="400"
        MinHeight="100">
    <!-- Make the top 40px behave like the system caption -->
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="40"
                            CornerRadius="20"
                            GlassFrameThickness="0"
                            UseAeroCaptionButtons="False"
                            ResizeBorderThickness="0"/>
    </shell:WindowChrome.WindowChrome>
    <Grid Margin="8">
        <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- TITLE BAR / CAPTION -->
                    <RowDefinition Height="Auto"/>
                    <!-- Body -->
                    <RowDefinition Height="Auto"/>
                    <!-- Buttons -->
                </Grid.RowDefinitions>

                <!-- CAPTION: draggable area (system top bar) -->
                <Grid Grid.Row="0" Margin="8,6,8,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                    <!-- Window icon (also set Window.Icon in code-behind if you want taskbar icon) -->
                <ui:SymbolIcon x:Name="IconElement" FontSize="20" VerticalAlignment="Center" Grid.Column="0" Margin="0, 0, 8, 0" Foreground="{DynamicResource TextFillColorPrimaryBrush}" />

                        <TextBlock Text="{Binding TitleText}"
                                   FontWeight="SemiBold"
                                   Margin="0, 0, 15, 0"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}" Grid.Column="1" VerticalAlignment="Center"/>
                    <!-- Close (custom, because WindowStyle=None) -->
                        <ui:Button
                                Width="36" Height="28"
                                Content="{ui:SymbolIcon Dismiss24}"
                                Click="Close_Click"
                                Grid.Column="2"
                                shell:WindowChrome.IsHitTestVisibleInChrome="True"
                                   HorizontalAlignment="Right"
                            Padding="3"
                            Cursor="Hand"/>    
                </Grid>

                <!-- BODY -->
                <StackPanel Grid.Row="1" Margin="10, 0, 10, 20" Orientation="Vertical">
                        <TextBlock Text="{Binding MessageText}"
                                   FontSize="12"
                                   TextWrapping="Wrap"
                                   Foreground="{DynamicResource TextFillColorTertiaryBrush}"/>
                 </StackPanel>

                <!-- BUTTONS -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right"  Margin="10,0,10,10">
                    <ui:Button x:Name="SecondaryButton"
                               Appearance="Secondary"
                               MinWidth="92"
                               Margin="0, 0, 8, 0"
                               Click="Secondary_Click"
                               Content="{Binding SecondaryButtonText}"
                               shell:WindowChrome.IsHitTestVisibleInChrome="True"
                               Cursor="Hand"/>
                    <ui:Button x:Name="PrimaryButton"
                               Appearance="Primary"
                               MinWidth="92"
                               IsDefault="True"
                               Click="Primary_Click"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                               Content="{Binding PrimaryButtonText}"
                               shell:WindowChrome.IsHitTestVisibleInChrome="True"
                               Cursor="Hand"/>
                </StackPanel>
            </Grid>
       
    </Grid>
</Window>
